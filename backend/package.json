{
  "name": "backend",
  "module": "index.ts",
  "private": true,
  "scripts": {
    "dev": "npm run test && concurrently \"~/.bun/bin/bun --watch index.ts\" \"npm run test:watch\"",
    "start": "~/.bun/bin/bun index.ts",
    "build": "npm run test && ~/.bun/bin/bun build index.ts --outdir ./dist",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watchAll --silent",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "latest",
    "@types/jest": "^29.5.14",
    "better-sqlite3": "^11.10.0",
    "bun-types": "^1.2.15",
    "concurrently": "^9.1.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/cron": "^1.3.0",
    "@elysiajs/swagger": "^1.3.0",
    "elysia": "^1.3.4",
    "tsx": "^4.19.4",
    "winston": "^3.17.0"
  }
}
